# ðŸ“° Task 3 - Web Scraper for News Headline
import requests
from bs4 import BeautifulSoup

def scrape_headlines():
    url = "https://www.bbc.com/news"   # You can change to any public news site
    
    headers = {
        "User-Agent": "Mozilla/5.0"
    }

    try:
        response = requests.get(url, headers=headers)

        # Check if request was successful
        if response.status_code == 200:
            soup = BeautifulSoup(response.text, "html.parser")

            # Find all h2 tags (commonly used for headlines)
            headlines = soup.find_all("h2")

            with open("headlines.txt", "w", encoding="utf-8") as file:
                for headline in headlines:
                    text = headline.get_text().strip()
                    if text:
                        print(text)
                        file.write(text + "\n")

            print("\nHeadlines saved successfully in headlines.txt")

        else:
            print("Failed to retrieve webpage. Status code:", response.status_code)

    except Exception as e:
        print("An error occurred:", e)

if __name__ == "__main__":
    scrape_headlines()
